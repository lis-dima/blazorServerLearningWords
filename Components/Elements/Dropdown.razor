<div class="@($"{Classes} dropdown")" @onmouseover="()=>OpenDropdown = true" @onmouseout="()=>OpenDropdown = false">
    <a class="btn btn-secondary dropdown-toggle"
       href="#"
       role="button"
       id="dropdownMenuLink"
       data-toggle="dropdown"
       aria-haspopup="true"
       aria-expanded="@OpenDropdown">
        @Title
    </a>

    <div class="dropdown-menu @($"dropdown-menu {(OpenDropdown ? "show" : "")}")" aria-labelledby="dropdownMenuLink" @onclick="()=>OpenDropdown = false">
        @foreach (var option in Options)
        {
            <span class="dropdown-item" @onclick=" async () => await OnClickEvent.InvokeAsync(option)">
                @option
            </span>
        }
    </div>
</div>


@code {
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public List<string> Options { get; set; }
    [Parameter]
    public EventCallback<string> OnClickEvent { get; set; }
    [Parameter]
    public string Classes { get; set; }
    bool OpenDropdown { get; set; }
}